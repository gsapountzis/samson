<% import samson.example.scalate.views.Views.Orders.Model %>

<%@ val it: Model %>
<% val id = it.id %>
<% val order = it.order %>

<form>
  <fieldset>

    <div class="clearfix">
      <label>Customer</label>
      <div class="input">
        <span class="uneditable-input">${ order.customer.name }</span>
      </div>
    </div>

    <div class="clearfix">
      <label>Code</label>
      <div class="input">
        <span class="uneditable-input">${ order.code }</span>
      </div>
    </div>

    <div class="clearfix">
      <label>Order date</label>
      <div class="input">
        <span class="uneditable-input">${ order.orderDate }</span>
      </div>
    </div>

    <div class="clearfix">
      <label>Ship date</label>
      <div class="input">
        <span class="uneditable-input">${ order.shipDate }</span>
      </div>
    </div>

    <div class="clearfix">
      <label>Status</label>
      <div class="input">
        <span class="uneditable-input">${ order.status }</span>
      </div>
    </div>

    <div class="clearfix">
      <label>&nbsp;</label>
    </div>

    <% var i = 0; order.items.foreach(item => { %>

      <div class="clearfix">
        <label>&nbsp;</label>
        <div class="input">
          <span class="uneditable-input span4">${ item.product.name }</span> &nbsp;&times;&nbsp;
          <span class="uneditable-input span1">${ item.qty }</span>
        </div>
      </div>

    <% i += 1; }) %>

  </fieldset>

  <div class="actions">
    <a href="${ uri("/orders/" + id + "/edit") }" class="btn">Edit order</a>&nbsp;
    <a href="${ uri("/orders") }" class="btn">View list</a>
  </div>
</form>
